<h1>Listing projects</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Scope</th>
    <th>Resources</th>
    <th>Team member</th>
    <th>Team member title</th>
    <th>Team member contact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.summary %></td>
    <td><%= project.scope %></td>
    <td><%= project.resources %></td>
    <td><%= project.team_member %></td>
    <td><%= project.team_member_title %></td>
    <td><%= project.team_member_contact %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

